<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher4"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher4"
        android:supportsRtl="true"
        android:theme="@style/Theme.Projet_S1_AI_LM"
        tools:targetApi="31">
        <activity
            android:name=".EditAnimalActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_animal"
            android:theme="@style/Theme.Projet_S1_AI_LM" />
        <activity
            android:name=".EditActivityActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_activity"
            android:theme="@style/Theme.Projet_S1_AI_LM" />
        <activity
            android:name=".AddActivityActivity"
            android:exported="false"
            android:label="@string/title_activity_add_activity"
            android:theme="@style/Theme.Projet_S1_AI_LM" />
        <activity
            android:name=".AnimalDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_animal_detail"
            android:theme="@style/Theme.Projet_S1_AI_LM" />
        <activity
            android:name=".AddAnimalActivity"
            android:exported="false"
            android:label="@string/title_activity_add_animal"
            android:theme="@style/Theme.Projet_S1_AI_LM" />
        <activity
            android:name=".EditDefaultActivityActivity"
            android:exported="false"
            android:label="@string/title_parameters_edit_activityl"
            android:theme="@style/Theme.Projet_S1_AI_LM" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Projet_S1_AI_LM">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>